<form asp-controller="Cliente" asp-action="Relatorio">
    <div class="form-group">
        <label>Informe o CPF</label>
        <input type="text" asp-for="Cpf" class="form-control" />
    </div>
    <div class="form-group">
        <label>Informe o PLACA</label>
        <input type="text" asp-for="placa" class="form-control" />
    </div>
    <button type="submit" class="btn btn-block btn-success" onclick="">Pesquisar</button>
</form>


<form>
    <input type="button" value="Print this page" onClick="window.print()" />
</form>