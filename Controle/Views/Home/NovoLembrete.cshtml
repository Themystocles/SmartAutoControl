@model LembretesModel
@{
    ViewData["Title"] = "NovoCliente";
}

<h3>Novo Lembrete</h3>

<form asp-controller="Home" asp-action="NovoLembrete">
    <div class="form-group">
        <label>Escreva seu lembrete</label>
        <input type="text" class="form-control" asp-for="Lembretes">
        <span asp-validation-for="Lembretes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>

</form>

